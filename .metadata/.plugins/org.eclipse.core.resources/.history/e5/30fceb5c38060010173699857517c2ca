public class Cart {
	public static final int MAX_NUMBER_ORDERED = 20;
	private DigitalVideoDisc itemsOrdered[] = new DigitalVideoDisc[MAX_NUMBER_ORDERED];
	private int numberOrdered = 0;
	
	void addDigitalVideoDisc(DigitalVideoDisc disc) {
		if(numberOrdered < MAX_NUMBER_ORDERED)
			itemsOrdered[numberOrdered++] = disc;
		else
			System.out.println("The cart is full!");
	}
	
	void totalCost() {
		float res = 0;
		for(int i = 0; i < numberOrdered; i++) {
			res += itemsOrdered[i].getCost();
		}
		System.out.println("The price is: %.2f", res);
	}
}
